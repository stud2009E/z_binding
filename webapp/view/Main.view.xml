<mvc:View
	controllerName="z.bnd.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	core:require="{
		ColorType: 'z/bnd/module/ColorType'
	}"
	displayBlock="true"
	xmlns="sap.m"
	height="100%">

    <Page showHeader="false"
		title="Binding"
		class="sapUiContentPadding">

		<Panel headerText="template"
			expandable="true"
			expanded="false"
			visible="false">
			<List id="template"
				headerText="template"
				items="{
					path:'/TestDataSet'
				}">
				<items>
					<StandardListItem 
						counter="{Int16}"
						title="{String}"
						info="{Guid}"
					/>
				</items>
			</List>
		</Panel>

		<Panel headerText="factory"
			expandable="true"
			expanded="false"
			visible="false">
			<List id="factory"
				headerText="factry"
				items="{
					path: '/TestDataSet',
					factory: '.factoryListItem'
				}"
			/>
			
			<f:Form id="contextBindingForm">
				<f:title>
					<core:Title text="Context Binding" />
				</f:title>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="4"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="3"
						columnsL="2"
						columnsM="2"
						singleContainerFullSize="false" />
				</f:layout>

				<f:formContainers>
					<f:FormContainer title="Strings">
						<f:formElements>
							<f:FormElement label="{Guid/#@sap:label}">
								<f:fields>
									<Input id="nameText"
										value="{
											path:'Guid',
											type: 'sap.ui.model.odata.type.Guid',
											constraints:{
												nullable: false
											}
										}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{String/#@sap:label}">
								<f:fields>
									<Input
										value="{
											path:'String',
											type: 'sap.ui.model.odata.type.String',
											formatOptions:{
												parseKeepsEmptyString: false
											},
											constraints: {
												isDigitSequence: false,
												nullable: false,
												maxLength: 10
											}
										}"
									/>
									<!-- <Input
										value="{
											path: 'String',
											type: 'sap.ui.model.type.String',
											constraints: {
												maxLength: 10,
												minLength: 5,
												startsWith: 'ab',
												endsWithIgnoreCase: 'cd'
											}
										}"
									/> -->
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>

					<f:FormContainer title="Numbers">
						<f:formElements>
							<f:FormElement label="{Int16/#@sap:label}">
								<f:fields>
									<Input  id="Int16"
										value="{
											path:'Int16',
											type: 'sap.ui.model.odata.type.Int16',
											formatOptions: {
												style: 'default',
												groupingSeparator: '-'
											}
										}"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{Int32/#@sap:label}">
								<f:fields>
									<Input id="Int32"
										value="{
											path: 'Int32',
											type: 'sap.ui.model.odata.type.Int32',
											formatOptions: {
												style: 'default',
												groupingSeparator: '_'
											}
										}"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{Byte/#@sap:label}">
								<f:fields>
									<Input id="Byte"
										value="{
											path:'Byte',
											type: 'sap.ui.model.odata.type.Byte',
											formatOptions: {}
										}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{Decimal/#@sap:label}">
								<f:fields>
									<Input id="Decimal"
										value="{
											path:'Decimal',
											type: 'sap.ui.model.odata.type.Decimal',
											formatOptions: {
												decimalSeparator: '.'
											},
											constraints:{
												precision: 11,
												scale: 3
											}
										}"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>

					<f:FormContainer title="Dates">
						<f:formElements>
							<f:FormElement label="{Date/#@sap:label}">
								<f:fields>
									<DateTimePicker
										value="{
											path:'Date',
											type: 'sap.ui.model.odata.type.Date',
											formatOptions: {
												format: 'yMMMd'
											}
										}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{Time/#@sap:label}">
								<f:fields>
									<TimePicker value="{
											path:'Time',
											type: 'sap.ui.model.odata.type.Time'
										}" 
										valueFormat="HH:mm:ss"
										displayFormat="HH:mm:ss"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</Panel>
		
		<Panel headerText="custom data type"
			expandable="true"
			expanded="true"
			visible="true">
			
			<Input id="colorTypeInput" 
				value="{
					model: 'local',
					path: '/color',
					type: 'ColorType'	
				}"/>

		</Panel>
    </Page>

</mvc:View>